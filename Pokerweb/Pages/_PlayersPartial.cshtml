@using Pokerweb.Models
@model Room

@if (Model.Winners.Count > 0)
{
    @foreach (string x in Model.Winners)
    {
        <h1>@x</h1>
        <h1 style="color: red; font-size: larger">Případ konce = @Model.endedCase.ToString() </h1>
    }

}

<h3>Celkový příhoz: @Model.Sum</h3>

<h2>kolo: @Model.Round</h2>

<h2>Timestamp: @Model.TimeStamp.ToString()</h2>

<h2>Karty místonsti:</h2>
@for (int i = 0; i < Model.Round + 2; i++)
{
    if (i <= 5)
    {
        <p>@Model.Cards[i]</p>
    }
}

<h2>Hráči:</h2>

<table class="table table-striped">
    @foreach (var player in Model.Players)
    {
        <tr>
            <td>@player.PlayerName</td>
            <td>@player.Money</td>
            <td>@player.MoneyFinal</td>
            <td>@player.Founder</td>
            <td>@player.Played</td>
            <td>In: @player.InGame</td>
        </tr>
    }
</table>

<h2>Karty hráče:</h2>

<p>@Model.Players.Find(x => x.PlayerName == Model.PagePartialHelper).Cards[0] Hrace</p>
<p>@Model.Players.Find(x => x.PlayerName == Model.PagePartialHelper).Cards[1] Hrace</p>
